<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:baselineAligned="false" android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="left|center_vertical">

	<GridLayout
		android:orientation="vertical"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_gravity="left|center_vertical"
		android:columnCount="2"
		android:rowCount="10"
		android:layout_weight="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/labelName"
			android:layout_row="0"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/publicAccessName"
			android:layout_row="0"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelLake"
			android:layout_row="1"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessLake"
			android:layout_row="1"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelCounty"
			android:layout_row="2"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessCounty"
			android:layout_row="2"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelLaunch"
			android:layout_row="3"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessLaunch"
			android:layout_row="3"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelDocks"
			android:layout_row="4"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessDocks"
			android:layout_row="4"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelDistance"
			android:layout_row="5"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessDistance"
			android:layout_row="5"
			android:layout_column="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/labelDirections"
			android:layout_row="6"
			android:layout_column="0" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/publicAccessDirections"
			android:layout_row="7"
			android:layout_column="0"
			android:layout_columnSpan="2" />
	</GridLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<fragment xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/map"
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:name="com.google.android.gms.maps.MapFragment" />
		</LinearLayout>
</LinearLayout>